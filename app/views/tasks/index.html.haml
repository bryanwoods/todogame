- @tasks.reverse.each do |task|
  - if task.done
    %strike
      %em
        %p
          =link_to task.name, task
          %br
          Due:
          =h task.due
          =h task.point_value
          |
          = link_to 'Edit', edit_task_path(task)
  - else
    %p
      =link_to task.name, task
      %br
      Due:
      =h task.due
      =h task.point_value
      |
      = link_to 'Edit', edit_task_path(task)
%br
= link_to 'New task', new_task_path