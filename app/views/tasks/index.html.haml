%h1 Listing tasks
%table
  %tr
    %th Name
    %th Due
    %th Point Value
    %th Done
  - @tasks.reverse.each do |task|
    %tr
      %td
        =h task.name
      %td
        =h task.due
      %td
        =h task.point_value
      %td
        =h task.done
      %td
        = link_to 'Show', task
      %td
        = link_to 'Edit', edit_task_path(task)
      %td
        = link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete
%br
= link_to 'New task', new_task_path