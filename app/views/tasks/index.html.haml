- @tasks.reverse.each do |task|
  - if task.done
    %strike
      %em
        %p
          =h task.name
          %br
          Due:
          =h task.due
          =h task.point_value
          =h task.done
          %br
          = link_to 'Show', task
          = link_to 'Edit', edit_task_path(task)
          = link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete
  - else
    %p
      =h task.name
      %br
      Due:
      =h task.due
      =h task.point_value
      =h task.done
      %br
      = link_to 'Show', task
      = link_to 'Edit', edit_task_path(task)
      = link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete
%br
= link_to 'New task', new_task_path